<br><h2 class="p-3"><%= @restaurant.name %></h2>
<div class="container">
  <div class="row justify-content-between">
    <div class="col-6 bg-white">
      <p class="p-3"><%= @restaurant.address %></p>
      <p class="p-3"><%= @restaurant.category %></p>
      <% @restaurant.reviews.each_with_index do |review, index| %>
      <p class="p-3"><%= "#{index + 1} - #{review.content} Rating: #{review.rating}" %></p>
      <% end %>
    </div>
    <div class="col-6 bg-white">
      <%= simple_form_for [ @restaurant, @review ] do |f| %>
      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_field :content, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :rating %>
        <%= f.select :rating, [0, 1, 2, 3, 4, 5], label_html: { class: 'form-control' } %>
      </div>
      <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
